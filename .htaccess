RewriteEngine On

# Remove .html from URL
RewriteCond %{REQUEST_FILENAME}.html -f
RewriteRule ^(.*)$ $1.html [L]

# Redirect .html to clean URL
RewriteCond %{THE_REQUEST} \s/+(.+?)\.html[\s?]
RewriteRule ^ %1 [R=301,L]


RewriteEngine On
# Force HTTPS and canonical non-www
RewriteCond %{HTTPS} off [OR]
RewriteCond %{HTTP_HOST} ^www\.ojashomoeopathy\.in$ [NC]
RewriteRule ^(.*)$ https://ojashomoeopathy.in/$1 [L,R=301]

# Serve .html files without .html in URL (optional)
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME}\.html -f
RewriteRule ^([^/]+)/?$ $1.html [L]

# Redirect .html URLs to extensionless
RewriteRule ^(.*)\.html$ /$1 [R=301,L]
